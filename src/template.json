{
    "manifest_version": 2,
    "name": "$name",
    "version": "1.0.2",
    "browser_specific_settings": {
        "gecko": {
            "id": "graknow.$id@addons.thunderbird.net",
            "strict_min_version": "60.0"
        }
    },
    "description": "$description",
    "icons": {
        "16": "icon.png"
    },
    "theme_experiment": {
        "colors": {
            "spaces_bg": "--spaces-bg-color",
            "spaces_bg_active": "--spaces-button-active-bg-color",
            "spaces_button": "--spaces-button-active-text-color",
            "tree_view_bg": "--tree-view-bg",
            "bg": "--bg-color",
            "tree_pane_bg": "--tree-pane-background",
            "tree_card_bg": "--tree-card-background",
            "button_primary_bg": "--button-primary-background-color",
            "button_text": "--button-primary-text-color",
            "button_bg": "--button-background-color",
            "lwt_accent": "--lwt-accent-color",
            "list_container_background_selected_current": "--list-container-background-selected-current",
            "ab_cards_list_bg": "--ab-cards-list-bg",
            "in_content_box_info_background": "--in-content-box-info-background",
            "calendar_view_toggle_bg": "--calendar-view-toggle-background",
            "calendar_view_toggle_hover_bg": "--calendar-view-toggle-hover-background",
            "tabs_toolbar_bg": "--tabs-toolbar-background-color",
            "thread_pane_flag_fill": "--thread-pane-flag-fill",
            "thread_pane_flag_stroke": "--thread-pane-flag-stroke",
            "link": "--link-color",
            "link_hover": "--link-color-hover",
            "link_visited": "--link-color-visited",
            "layout_bg_0": "--layout-background-0",
            "layout_bg_1": "--layout-background-1",
            "gray_70": "--color-gray-70",
            "gray_50": "--color-gray-50",
            "time_color": "--viewTimeBoxColor"
        }
    },
    "theme": {
        "colors": {
            "button_background_active": "$highlightHigh",
            "button_background_hover": "$highlightMed",
            "icons": "$rose",
            "icons_attention": "$pine",
            "frame": "$base",
            "frame_inactive": "$base",
            "ntp_background": "$base",
            "ntp_card_background": "$surface",
            "ntp_text": "$text",
            "tab_text": "$text",
            "tab_line": "$love",
            "tab_loading": "$subtle",
            "tab_background_text": "$text",
            "tab_selected": "$surface",
            "toolbar": "$base",
            "toolbar_text": "$text",
            "toolbar_field": "$overlay",
            "toolbar_field_focus": "$overlay",
            "toolbar_field_text": "$subtle",
            "toolbar_field_text_focus": "$subtle",
            "toolbar_field_highlight": "$subtle",
            "toolbar_field_highlight_text": "$base",
            "toolbar_field_border": "$base",
            "toolbar_field_border_focus": "$pine",
            "toolbar_top_separator": "rgba(0, 0, 0, 0.0)",
            "toolbar_bottom_separator": "$highlightHigh",
            "toolbar_vertical_separator": "$highlightHigh",
            "sidebar": "$surface",
            "sidebar_text": "$text",
            "sidebar_highlight": "$rose",
            "sidebar_highlight_text": "$base",
            "sidebar_border": "$highlightHigh",
            "popup": "$overlay",
            "popup_text": "$text",
            "popup_border": "$rose",
            "popup_highlight": "$highlightMed",
            "popup_highlight_text": "$text",
            "spaces_bg": "$base",
            "spaces_bg_active": "$highlightMed",
            "spaces_button": "$rose",
            "tree_view_bg": "$highlightMed",
            "bg": "$base",
            "tree_pane_bg": "$base",
            "tree_card_bg": "$overlay",
            "button_primary_bg": "$overlay",
            "button_text": "$text",
            "button_bg": "$overlay",
            "lwt_accent": "$love",
            "list_container_background_selected_current": "$highlightLow",
            "ab_cards_list_bg": "$surface",
            "in_content_box_info_background": "$surface",
            "calendar_view_toggle_bg": "$overlay",
            "calendar_view_toggle_hover_bg": "$highlightMed",
            "tabs_toolbar_bg": "$base",
            "thread_pane_flag_fill": "$gold",
            "thread_pane_flag_stroke": "$gold",
            "link": "$iris",
            "link_hover": "$iris",
            "link_visited": "$foam",
            "layout_bg_0": "$base",
            "layout_bg_1": "$surface",
            "gray_50": "$highlightHigh",
            "gray_70": "$($overlay|$overlay|$subtle)",
            "time_color": "$subtle"
        },
        "properties": {
            "color_scheme": "$type"
        }
    }
}
